{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "module": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/*.ts"]
}
